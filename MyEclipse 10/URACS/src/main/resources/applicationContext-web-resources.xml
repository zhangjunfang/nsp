		init-method="init" destroy-method="close"> <property name="driverClassName" 
		value="${jdbc.driverClassName}" /> <property name="url" value="${jdbc.url}" 
		/> <property name="username" value="${jdbc.username}" /> <property name="password" 
		value="${jdbc.password}" /> </bean> <bean id="druid-test-mbeanServer" class="com.alibaba.druid.support.spring.MBeanServerFactoryBean" 
		/> <bean id="druid-test-exporter" class="org.springframework.jmx.export.MBeanExporter" 
