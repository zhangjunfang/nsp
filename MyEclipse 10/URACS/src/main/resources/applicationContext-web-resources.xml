		value-ref="ataSource-derby" /> <entry key="com.alibaba.druid.demo:type=DataSource,name=mysql" 
		value-ref="ataSource-mysql" /> </map> </property> <property name="server" 
		ref="druid-test-mbeanServer" /> </bean> -->
	<bean id="entityManagerFactory"
		class="org.springframework.orm.jpa.LocalContainerEntityManagerFactoryBean">
		<property name="dataSource" ref="dataSource" />
		<property name="persistenceUnitName" value="app_db_unit" />
		<property name="persistenceXmlLocation" value="classpath:persistence-app.xml" />
		<property name="jpaVendorAdapter">
			<bean class="org.springframework.orm.jpa.vendor.HibernateJpaVendorAdapter">
				<property name="databasePlatform" value="${hibernate.dialect}" />
			</bean>
		</property>
	</bean>
	<bean id="transactionManager" class="org.springframework.orm.jpa.JpaTransactionManager">
		<property name="entityManagerFactory" ref="entityManagerFactory" />
	</bean>
	<bean
		class="org.springframework.orm.jpa.support.PersistenceAnnotationBeanPostProcessor" />
	<tx:annotation-driven transaction-manager="transactionManager"
		proxy-target-class="true" />
</beans>